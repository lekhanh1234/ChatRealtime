<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".ui.PickPictureToSendMessage">
    <TextView
        android:id="@+id/TV_pictureFromGallary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_marginStart="10dp"
        android:text="Ảnh từ thư bộ sưu tập"
        android:gravity="center|start"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="#393939"
        android:background="@color/white"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RCV_GallarePiture"
        android:layout_weight="86"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        >
    </androidx.recyclerview.widget.RecyclerView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        >

        <Button
            android:id="@+id/BT_sendPicture"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Send"
            android:textColor="@color/white"
            android:background="@drawable/draw_btn_sendpicture"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>