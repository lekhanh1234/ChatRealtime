<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EditPrivacyInfo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Thay đổi thông tin cá nhân"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:text="Giới tính"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BT_selectBirthDay"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="220dp"
        android:background="#04A9F4"
        android:text="Ngày sinh"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BT_updateInfo"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="372dp"
        android:background="#04A9F4"
        android:padding="10dp"
        android:text="Xác nhận thay đổi"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_selectedBirthDay"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="220dp"
        android:text="2012 - 5 -6"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:text="Tên của bạn"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="284dp"
        android:gravity="center"
        android:text="Tên tài khoản"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EDT_yourName"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:minWidth="240dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:hint="Nhập tên của bạn"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EDT_myAccountName"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="284dp"
        android:ems="10"
        android:hint="Tên tài khoản"
        android:inputType="text"
        android:minWidth="240dp"
        android:text=""
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/SW_sex"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:text="Nam"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="160dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="160dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>